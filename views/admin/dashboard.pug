doctype html
html
  head
    meta(charset="utf-8")
    title Servapa Services
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="/css/styles.css")
  body
    header#header.navbar.navbar-expand-lg.navbar-light.bg-light
      .container-fluid
        h2#site-name.navbar-brand
          a(href="/").text-primary Servapa Services
        button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarNav", aria-controls="navbarNav", aria-expanded="false", aria-label="Toggle navigation")
          span.navbar-toggler-icon
        .collapse.navbar-collapse#navbarNav
          ul.navbar-nav.ms-auto
            li.nav-item
              a.nav-link(href="/admin") Dashboard Home
            li.nav-item
              a.nav-link(href="/services") Services
            li.nav-item
              a.nav-link(href="/inquiries") Inquiries
            li.nav-item
              a.nav-link(href="/admin/logout") Admin Logout

    main#main
      .container.text-center.my-5
        h1.page-title Welcome to the Servapa Admin Dashboard
        p.mb-4 You can manage services and inquiries here. Choose an option below:
        .row.justify-content-center
          .col-md-4
            .card.shadow.p-4.mb-4
              h2.fs-4.text-center Manage Services
              p.text-center View, add, or delete services
              a.btn.btn-primary.w-100(href="/services") Go to Services
          .col-md-4
            .card.shadow.p-4.mb-4
              h2.fs-4.text-center Manage Inquiries
              p.text-center View, add, or delete inquiries
              a.btn.btn-primary.w-100(href="/inquiries") Go to Inquiries

